{
	"compilerOptions": {
		"sourceMap": true,
		"target": "ES6",
		"lib": ["esnext"],
		"incremental": true,
		"outDir": "./dist",
		"rootDir": "./",
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true
	},
	"include": ["src"],
	"exclude": ["src/**/*.spec.ts"]
}