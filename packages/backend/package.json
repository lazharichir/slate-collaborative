{
  "name": "@wleroux/backend",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "dependencies": {
    "@wleroux/resource": "file:../resource",
    "@wleroux/slate-value": "file:../slate-value",
    "fastify": "next",
    "fastify-cli": "next",
    "fastify-cors": "^4.0.0",
    "fastify-gql": "git://github.com/frikille/fastify-gql.git#v3-upgrade",
    "fastify-jwt": "^1.4.0",
    "fastify-plugin": "next",
    "fastify-websocket": "next",
    "graphql-subscriptions": "^1.1.0",
    "graphql": "^15.3.0",
    "knex": "^0.21.1",
    "nanoid": "^3.1.10",
    "pg": "^8.2.1",
    "ws": "^7.3.0"
  },
  "bundledDependencies": [
    "@wleroux/resource",
    "@wleroux/slate-value"
  ],
  "devDependencies": {
    "@types/jest": "^24.9.0",
    "@types/node": "^12.12.44",
    "@types/ws": "^7.2.6",
    "@types/knex": "^0.16.1",
    "@types/pg": "^7.14.3",
    "@types/source-map-support": "^0.5.1",
    "nodemon": "^2.0.4",
    "jest": "^24.9.0",
    "ts-jest": "^24.3.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "peerDependencies": {},
  "scripts": {
    "build": "tsc",
    "postbuild": "cp -R public/ dist && cd dist && npm install --production",
    "start": "npm run build && node dist/src/index.js",
    "start:dev": "ts-node --files ./src/index.ts",
    "start:watch": "nodemon",
    "knex:migrate:make": "knex --knexfile src/database/knexfile.ts migrate:make -x ts",
    "knex:migrate:latest": "knex --knexfile src/database/knexfile.ts migrate:latest",
    "knex:migrate:rollback": "knex --knexfile src/database/knexfile.ts migrate:rollback",
    "test": "jest --coverage"
  }
}
